  <main class="container mx-auto px-6 py-10">

    <div id="background" class="min-h-screen flex flex-col justify-center items-center transition filter-none">
      <h1 class="text-4xl font-bold text-white mb-4">Bienvenido</h1>
      <p class="text-lg text-white mb-6">Haz clic en el botón para iniciar sesión</p>
      <button id="open-modal" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700" >Iniciar Sesión</button>
    </div>

    {{>login}}

    <h1>PAQUETESSSSSS</h1>
    <section class="text-center">
      {{#if paquetes}}
        {{#each}}
          <div>
            <img src="" alt="LOGO DEL PAQUETE">
            <p>{{plazo}}</p>
            <p>{{precio}}</p>
            <p>{{meses}}</p>
          </div>
        {{/each}}
      {{else}}
        <h2>NO HAY PAQUETES AGREGALOOOOSOSSS</h2>
      {{/if}}
    </section>

    <h1>NOTICIASSSSS</h1>
    <section class="text-center">
      {{#if noticias}}q
        {{#each}}
          <div>
            <img src="" alt="LOGO DEL PAQUETE">
            <p>{{Foto}}</p>
            <p>{{Contenido}}</p>
            <p>{{Link}}</p>
          </div>
        {{/each}}
      {{else}}
        <h2>NO HAY NOTICIAS PINCHE CHISMOSO</h2>
      {{/if}}
    </section>

    <script src="/scripts/flotante.js"></script>
  </main>