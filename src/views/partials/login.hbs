<div id="modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-gradient-to-r from-customGradientStart to-customGradientEnd p-8 rounded-lg shadow-lg max-w-md w-full text-center">
        <form action="/login" method="POST">
            <img src="Img/ventanal_redondo_paloma.png" alt="Paloma_r" class="block mx-auto mb-4">
            <div class="mb-4">
                <label for="username" class="block text-center text-white font-Galada mb-1">Usuario:</label>
                <input type="text" id="username" name="username" 
                       class="w-4/5 px-4 py-2 border rounded-lg focus:outline-none focus:ring" required>
            </div>
            <div class="mb-6">
                <label for="password" class="block text-center text-white font-Galada mb-1 font-Cutive">Contraseña:</label>
                <input type="password" id="password" name="password" 
                       class="w-4/5 px-4 py-2 border rounded-lg focus:outline-none focus:ring" required>
            </div>
            <button type="submit" class="px-6 py-2 bg-lightButton text-customGradientEnd rounded-lg hover:bg-lightButton">Iniciar sesión</button>
        </form>
        <button id="close-modal" class="mt-4 text-white hover:underline">Cerrar</button>
    </div>
</div>
