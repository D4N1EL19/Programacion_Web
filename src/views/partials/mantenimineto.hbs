<main class="grid place-content-center">
    <div class="text-center max-w-lg bg-white shadow-lg rounded-lg p-8">
        <form action="/uploadImage" method="post" enctype="multipart/form-data">
            <label for="descripcion">descripcion:</label>
            <input type="text" id="descripcion" name="descripcion" required>
            <br><br>

            <label for="link">Link: </label>
            <input type="text" id="link" name="link" required>
            <br><br>

            <label for="file">Subir Archivo:</label>
            <input type="file" id="file" name="file" required>
            <br><br>

            <button type="submit">Enviar</button>
        </form>
    </div >

    <div class="text-center max-w-lg bg-white shadow-lg rounded-lg p-8 m-8">
        {{#each paquetes}}
            <form action="/actualizarPaquete" method="post">
                <input type="hidden" name="id" value="{{ID}}">
                <label for="periodo">periodo:</label>
                <input type="text" id="periodo" name="periodo" value="{{Plazo}}" required>
                <br><br>
                <label for="meses">Meses: </label>
                <input type="number" id="meses" name="meses" value="{{Meses}}" required>
                <br><br>
                <label for="precio">Precio:</label>
                <input type="number" id="precio" name="precio" value="{{Precio}}" required>
                <br><br>
                <button type="submit">Agregar</button>
            </form>
        {{/each}}
    </div>
</main>