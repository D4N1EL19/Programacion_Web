<div id="modal-large" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
  <div class="bg-gradient-to-r from-customGradientStart to-customGradientEnd p-12 rounded-lg shadow-lg w-full h-full max-w-none text-center">
    <h2 class="text-4xl text-white font-bold mb-6 font-Galada">Iniciar Sesión</h2>
    <form action="/login" method="POST" class="h-full flex flex-col justify-center items-center">
      <img src="Img/ventanal_redondo_paloma.png" alt="Paloma_r" class="block mx-auto mb-8 w-48">
      <div class="mb-6 w-1/2">
        <label for="username" class="block text-left text-white font-medium mb-2">Usuario:</label>
        <input type="text" id="username" name="username" 
               class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300" required>
      </div>
      <div class="mb-8 w-1/2">
        <label for="password" class="block text-left text-white font-medium mb-2 font-Cutive">Contraseña:</label>
        <input type="password" id="password" name="password" 
               class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300" required>
      </div>
      <button type="submit" class="w-1/2 py-3 bg-lightButton text-customGradientEnd rounded-lg hover:bg-lightButton">Iniciar sesión</button>
    </form>
    <button id="close-modal-large" class="mt-8 text-white hover:underline">Cerrar</button>
  </div>
</div>
